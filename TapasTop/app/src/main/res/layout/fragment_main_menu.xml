<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="es.upm.isii.tapastop.model.UserViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollview_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/light_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">
                    <ImageView
                        android:id="@+id/logout_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logout"
                        android:rotation="180"
                        android:padding="15dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/search_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search"
                        android:padding="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_menu"
                    android:textSize="36sp"
                    android:fontFamily="@font/brandon_grotesque_black"
                    android:textAllCaps="true"
                    android:padding="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/teal_700">

                        <TextView
                            android:id="@+id/username_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_above="@id/user_photo_main_menu"
                            android:layout_alignEnd="@id/user_photo_main_menu"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="4dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:textAlignment="center"
                            android:textColor="@color/grey_900"
                            android:text="@{viewModel.currentUser.username.toString()}"
                            tools:text="Kevin" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_photo_main_menu"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="centerCrop"
                            android:elevation="10dp"
                            app:imageBitmap="@{viewModel.userProfileImg}"
                            app:placeholder="@{@drawable/profile_pic_placeholder}" />

                        <TextView
                            android:id="@+id/user_stats_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/user_photo_main_menu"
                            android:paddingTop="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="4dp"
                            android:layout_toEndOf="@id/username_main_menu"
                            android:elevation="8dp"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:textAlignment="center"
                            android:textColor="@color/grey_900"
                            android:textSize="30sp"
                            android:text="@string/stats_title" />
                        <ImageView
                            android:id="@+id/img_requests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_below="@id/user_stats_main_menu"
                            android:layout_toEndOf="@id/user_photo_main_menu"
                            app:tint="@color/grey_900"
                            android:src="@drawable/ic_requests"/>
                        <ImageView
                            android:id="@+id/img_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_below="@id/img_requests"
                            android:layout_toEndOf="@id/user_photo_main_menu"
                            app:tint="@color/grey_900"
                            android:src="@drawable/ic_friends"/>
                        <TextView
                            android:id="@+id/user_requests_n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toEndOf="@id/img_requests"
                            android:layout_alignBottom="@id/img_requests"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:textAlignment="center"
                            android:textColor="@color/grey_900"
                            numberOf="@{viewModel.friendRequests}"
                            android:textSize="18sp"
                            android:text="0" />
                        <TextView
                            android:id="@+id/user_friends_n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toEndOf="@id/img_friends"
                            android:layout_alignBottom="@id/img_friends"
                            android:elevation="8dp"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:textAlignment="center"
                            android:textColor="@color/grey_900"
                            numberOf="@{viewModel.friends}"
                            android:textSize="18sp"
                            android:text="0" />
                        <Button
                            android:id="@+id/view_profile_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:background="@android:color/transparent"
                            android:text="@string/view_profile_title"
                            android:fontFamily="@font/brandon_grotesque_black"
                            android:textColor="@color/grey_900"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/cyan_700"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg"
                        android:backgroundTint="@color/cyan_700">
                        <TextView
                            android:id="@+id/favorite_title_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/favorites_title"
                            android:textColor="@color/grey_900"
                            android:textSize="30sp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/ic_favorite"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            />
                        <TextView
                            android:id="@+id/top_5_title_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@id/favorite_title_main_menu"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="30sp"
                            android:textColor="@color/grey_900"
                            android:text="@string/top_title"/>
                        <Button
                            android:id="@+id/favorite_view_all_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all_title"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/brandon_grotesque_black"
                            android:textColor="@color/grey_900"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/blue_400"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/button_bg"
                        android:backgroundTint="@color/blue_400">
                        <TextView
                            android:id="@+id/awards_title_main_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:drawableRight="@drawable/ic_award"
                            android:text="@string/awards_title"
                            android:textColor="@color/grey_900"
                            android:textSize="30sp"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/awards_title_main_menu"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="45dp"
                            android:fontFamily="@font/brandon_grotesque_bold_italic"
                            android:text="@string/last_5_title"
                            android:textSize="30sp"
                            android:textColor="@color/grey_900"
                            />
                        <Button
                            android:id="@+id/awards_view_all_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all_title"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="10dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/brandon_grotesque_black"
                            android:textColor="@color/grey_900"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/help_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_help"
            android:backgroundTint="@color/amber_700"
            app:borderWidth="0dp"
            android:elevation="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_add_tapa"
            android:backgroundTint="@color/amber_700"
            app:borderWidth="0dp"
            android:elevation="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>