<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="es.upm.isii.tapastop.model.UserViewModel" />
        
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout_root">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/amber_700">
            <TextView
                android:id="@+id/email_verification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_verification_title"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"
                android:fontFamily="@font/brandon_grotesque_black"
                android:textSize="36sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/email_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/code"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/email_verification_title"
                app:layout_constraintLeft_toLeftOf="@id/email_verification_title"
                app:layout_constraintRight_toRightOf="@id/email_verification_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:fontFamily="@font/brandon_grotesque_black"
                android:textSize="36sp"
                android:textColor="@color/grey_900"
                />
            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_marginBottom="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/email_code_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/email_code_title"
                app:layout_constraintLeft_toLeftOf="@id/email_code_title"
                app:layout_constraintVertical_bias="0.15"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clipToPadding="false">

                <EditText
                    android:id="@+id/edit_text_one"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="@drawable/code_item_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="15pt"
                    android:textStyle="bold"
                    android:elevation="4dp"/>
                <EditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edit_text_two"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="@drawable/code_item_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="15pt"
                    android:textStyle="bold"
                    android:elevation="4dp"/>
                <EditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edit_text_three"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="@drawable/code_item_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="15pt"
                    android:textStyle="bold"
                    android:elevation="4dp"/>
                <EditText
                    android:layout_marginStart="10dp"
                    android:id="@+id/edit_text_four"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="@drawable/code_item_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15pt"
                    android:textStyle="bold"
                    android:elevation="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/resend_code_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_email"
                android:paddingRight="8dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="@id/code_layout"
                app:layout_constraintStart_toStartOf="@id/code_layout"
                app:layout_constraintTop_toBottomOf="@id/code_layout"
                android:textSize="16sp"
                android:textColor="@color/grey_900"
                android:textStyle="bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</layout>
